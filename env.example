# ===========================================
# VARIABLES DE ENTORNO - MEDICAL DASHBOARD
# ===========================================

# ===== CONFIGURACIÓN DE LA API =====
NEXT_PUBLIC_API_BASE_URL=http://10.129.180.151:3001

# ===== CONFIGURACIÓN DE NEXT.JS =====
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ===== CONFIGURACIÓN DE DOCKER =====
# Puerto del frontend
FRONTEND_PORT=3000

# ===== CONFIGURACIÓN DE NGINX =====
# Dominio del servidor (cambiar por tu dominio)
NGINX_SERVER_NAME=localhost

# ===== CONFIGURACIÓN DE MONITORING =====
# Habilitar monitoring (true/false)
ENABLE_MONITORING=false

# ===== CONFIGURACIÓN DE REDIS =====
# Habilitar Redis cache (true/false)
ENABLE_REDIS=false

# ===== CONFIGURACIÓN DE SSL =====
# Habilitar SSL (true/false)
ENABLE_SSL=false

# ===== CONFIGURACIÓN DE LOGS =====
# Nivel de logs (debug, info, warn, error)
LOG_LEVEL=info

# ===== CONFIGURACIÓN DE RECURSOS =====
# Límites de memoria para el frontend (MB)
FRONTEND_MEMORY_LIMIT=1024
FRONTEND_MEMORY_RESERVATION=512

# Límites de CPU para el frontend
FRONTEND_CPU_LIMIT=0.5
FRONTEND_CPU_RESERVATION=0.25
